{
    "name": "ts-add-js-extension",
    "description": "Add .js extension to each relative import in compiled javascript file, minify and remove comments as additional option",
    "version": "0.0.5",
    "main": "./build/index.js",
    "license": "MIT",
    "type": "module",
    "types": "build",
    "bin": {
        "ts-add-js-extension": "bin/ts-add-js-extension.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "build": "rm -rf build && tsc"
    },
    "bugs": "https://github.com/P-YNPM/ts-add-js-extension/issues",
    "repository": {
        "type": "git",
        "url": "https://github.com/P-YNPM/ts-add-js-extension"
    },
    "devDependencies": {
        "@types/node": "^16.11.10",
        "@types/yargs": "^17.0.7",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "@typescript-eslint/typescript-estree": "^5.4.0",
        "parse-dont-validate": "^0.0.2",
        "yargs": "^17.3.0"
    },
    "keywords": [
        "js extension",
        "esnext",
        "minification"
    ]
}
